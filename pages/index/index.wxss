/**index.wxss**/
swiper{
  height: 420rpx !important;
}
.wx-swiper-dot::before{
  color: rgba(255,188,7,.3);
}
.wx-swiper-dot-active::before{
  color: #ffbc07;
}
page{
  height: 100%;
}
scroll-view{
    height: 100%;
}
.nav-box{
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #111;
  background-color: white;
}
.nav-box .divider{
  height: 80%;
  width: 1rpx;
  background-color: #ccc;
}
.nav-box .item{
  width: 200rpx;
  padding-left: 44rpx;
  background-size: 24rpx 24rpx;
  background-position: 0;
  background-repeat: no-repeat;
}
.nav-box .news{
  background-image: url(data:image/png;base64,);
  transform: translate3d(100rpx,0,0);
}
.nav-box .topic{
  background-image: url(data:image/png;base64,);
  transform: translate3d(56rpx,0,0);
}